<div class="col-md-12 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>
        Presupuesto Nuevo
      </h3>
    </div>
    <div class="card-body">
      <form
        action="/presupuestos/new-presupuesto"
        method="POST"
        id="formPrincipal"
      >
        <div class="form-group row">
          <label for="nropresupuesto" class="form-control col-md-3">
            N° de presupuesto
          </label>
          <input
            type="text"
            name="nropresupuesto"
            id="nroprespuesto"
            pattern="^[0-9]{4}-[0-9]{2}$"
            class="form-control col-md-2"
            placeholder="0000-00"
            autofocus
          />
          <div class="col-md-2"></div>
          <label for="fecha" class="form-control col-md-2">
            Fecha
          </label>
          <input
            type="date"
            id="fecha"
            name="fecha"
            class="form-control col-md-3"
          />
        </div>
        <div class="form-group row">
          <label for="referencia" class="form-control col-md-2">
            Referencia
          </label>
          <input
            type="text"
            id="referencia"
            name="referencia"
            class="form-control col-md-3"
            placeholder="Referencia"
          />
          <div class="col-md-2"></div>
          <label for="cliente" class="form-control col-md-2">
            Cliente
          </label>
          <datalist id="clients">
          </datalist>
          <input
            type="text"
            list="clients"
            name="clienteNombre"
            id="clienteNombre"
            class="form-control col-md-3"
            placeholder="Cliente"
            onblur="selCliente()"
          />
          <input type="hidden" name="cliente" id="cliente" />
        </div>
        <div class="form-group row">
          <label for="atencion" class="form-control col-md-2">
            Atención
          </label>
          <input
            type="text"
            name="atencion"
            id="atencion"
            class="form-control col-md-3"
            placeholder="Atención"
          />
          <div class="col-md-2"></div>
          <label for="observaciones" class="form-control col-md-2">
            Observaciones
          </label>
          <input
            type="text"
            name="observaciones"
            id="observaciones"
            class="form-control col-md-3"
          />
        </div>
        <div class="form-group row">
          <label for="plazoEntrega" class="col-md-2">
            Plazo Entrega
          </label>
          <input
            type="text"
            name="plazoEntrega"
            id="plazoEntrega"
            class="form-control col-md-3"
          />
          <div class="col-md-2"></div>
          <label for="vendedor" class="form-control col-md-2">
            Vendedor
          </label>
          <datalist id="salerman">
          </datalist>
          <input
            type="text"
            list="salerman"
            name="vendedorNombre"
            id="vendedorNombre"
            class="form-control col-md-3"
            placeholder="Vendedor"
            onblur="selVendedor()"
          />
          <input type="hidden" name="vendedor" id="vendedor" />
        </div>
        <div class="form-group row">
          <label for="formaPago" class="form-control col-md-2">
            Pago
          </label>
          <input
            type="text"
            name="formaPago"
            id="formaPago"
            class="form-control col-md-3"
          />
          <div class="col-md-2"></div>
          <label for="oferta" class="form-control col-md-2">
            Oferta
          </label>
          <input
            type="text"
            name="oferta"
            id="oferta"
            class="form-control col-md-3"
          />
        </div>
        <div class="form-group row">
          <label for="factor" class="form-control col-md-2">
            Factor
          </label>
          <input
            type="number"
            name="factor"
            id="factor"
            class="form-control col-md-3"
          />
          <div class="col-md-2"></div>
          <label for="tasaCambio" class="form-control col-md-2">
            T. Cambio
          </label>
          <input
            type="number"
            name="tasaCambio"
            id="tasaCambio"
            class="form-control col-md-3"
          />
        </div>
        <div class="form-group row">
          <label for="comisionCliente" class="form-control col-md-2">
            Comisión
          </label>
          <input
            type="number"
            name="comisionCliente"
            id="comisionCliente"
            class="form-control col-md-3"
            placeholder="1.00 si no hay"
          />
          <div class="col-md-2"></div>
          <div class="col-md-5">
            <button class="btn btn-primary" type="button" id="addAlpha">
              Agregar abertura alpha
            </button>
          </div>
        </div>
        <div class="form-group row">
          <label for="titulo" class="form-control col-md-2">
            Título
          </label>
          <textarea
            name="titulo"
            id="titulo"
            class="form-control col-md-10"
          ></textarea>
        </div>
        {{! Tabla de detalle de compra }}
        <div class="row">
          <table
            id="table"
            class="table table-sm table-hover table-dark table-bordered"
          >
            <thead>
              <tr>
                <th scope="col">
                  Item
                </th>
                <th scope="col">
                  Cantidad
                </th>
                <th scope="col">
                  Descripción
                </th>
                <th scope="col">
                  Precio Unit.
                </th>
                <th scope="col">
                  Subtotal
                </th>
              </tr>
            </thead>
            <tbody id="detail" name="detail">
              <tr id="totalRow">
                <td>
                  Total
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td id="total"></td>
              </tr>
            </tbody>
          </table>
          <input type="hidden" name="total" value="0">
          <input type="hidden" name="totalLetras" value="Cero">
        </div>
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-4"></div>
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit" id="guardar">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/js/presupuesto.js"></script>