<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Vendedor</h3>
        </div>
        <div class="card-body">
            <form action="/vendedores/edit/{{vendedor._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" value="{{vendedor.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" value="{{vendedor.email}}">
                </div>
                <div class="form-group">
                    <input type="text" name="iniciales" class="form-control" value="{{vendedor.iniciales}}">
                </div>
                <div class="form-group">
                    <input type="text" name="telefono" class="form-control" value="{{vendedor.telefono}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>