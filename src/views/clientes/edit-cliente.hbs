<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Cliente</h3>
        </div>
        <div class="card-body">
            <form action="/clientes/edit/{{cliente._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">

                <div class="form-group">
                    <input type="text" name="denominacion" class="form-control" value="{{cliente.denominacion}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" value="{{cliente.nombre}}">
                </div>
                <div class="form-group">
                    <textarea name="direccion" class="form-control">{{cliente.direccion}}</textarea>
                </div>
                <div class="form-group">
                    <input type="text" name="telefono" class="form-control" value="{{cliente.telefono}}">
                </div>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" value="{{cliente.email}}">
                </div>
                <div class="form-group">
                    <input type="text" name="atencion" class="form-control" value="{{cliente.atencion}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>