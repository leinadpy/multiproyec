<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Perfil Nuevo</h3>
        </div>
        <div class="card-body">
            <form action="/perfiles/new-perfil" method="POST">
                <div class="form-group">
                    <input type="text" name="codigo" class="form-control" placeholder="Código" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="descripcion" class="form-control" placeholder="Descripción">
                </div>
                <div class="form-group">
                    <input type="text" name="pesoPorMetro" class="form-control" placeholder="Peso por metro">
                </div>
                <div class="form-group">
                    <select name="linea" class="form-control">
                        <option value="Alpha">Línea Alpha</option>
                        <option value="Suprema">Línea Suprema</option>
                        <option value="Inova">Línea Inova</option>
                        <option value="Gold">Línea Gold</option>
                        <option value="Templado">Línea Templado</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="longitudBarra" class="form-control" placeholder="Longitud de barra">
                </div>
                <div class="form-group">
                    <select name="color" class="form-control">
                        <option value="Bronce 1003">Bronce 1003</option>
                        <option value="Bronce 1002">Bronce 1002</option>
                        <option value="Fosco">Fosco</option>
                        <option value="Blanco">Blanco</option>
                        <option value="Efecto Madera">Efecto Madera</option>
                    </select>
                </div>
                <div class="form-group">
                    <select name="proveedor" class="form-control">
                        <option value="Vidriocar S.A.">Vidriocar S.A.</option>
                        <option value="Alumerco S.R.L.">Alumerco S.R.L.</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="precioPorBarra" class="form-control" placeholder="Precio por barra">
                </div>
                <div class="form-group">
                    <input type="date" name="fechaVigente" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>